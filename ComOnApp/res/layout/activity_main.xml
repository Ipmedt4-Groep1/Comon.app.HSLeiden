<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

	<ImageView
	    android:id="@+id/imageView1"
	    android:background="@null"
	    android:layout_width="200dp"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="14dp"
	    android:src="@drawable/comon" />

	<ImageView
	    android:id="@+id/imageView2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentLeft="true"
	    android:src="@drawable/balk_afbeelding" />

	<ImageButton
	    android:id="@+id/infoButton"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/imageView1"
	    android:layout_marginLeft="34dp"
	    android:layout_marginTop="20dp"
	    android:background="@null"
	    android:src="@drawable/info" />

	<ImageButton
	    android:id="@+id/nieuwsButton"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignTop="@+id/infoButton"
	    android:layout_marginLeft="5dp"
	    android:layout_toRightOf="@+id/infoButton"
	    android:background="@null"
	    android:src="@drawable/nieuws" />

	<ImageButton
	    android:id="@+id/deelnemerButton"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/nieuwsButton"
	    android:layout_alignTop="@+id/opdrachtgeverButton"
	    android:background="@null"
	    android:src="@drawable/deelnemers" />

	<ImageButton
	    android:id="@+id/stemButton"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/deelnemerButton"
	    android:layout_alignTop="@+id/kalenderButton"
	    android:background="@null"
	    android:src="@drawable/stemmen" />

	<ImageButton
	    android:id="@+id/kalenderButton"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/opdrachtgeverButton"
	    android:layout_below="@+id/opdrachtgeverButton"
	    android:layout_marginTop="8dp"
	    android:background="@null"
	    android:src="@drawable/kalender" />

	<ImageButton
	    android:id="@+id/opdrachtgeverButton"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerVertical="true"
	    android:layout_toLeftOf="@+id/nieuwsButton"
	    android:background="@null"
	    android:src="@drawable/bedrijven" />

</RelativeLayout>