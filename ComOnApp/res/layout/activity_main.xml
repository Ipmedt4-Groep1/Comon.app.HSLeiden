<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

	<ImageView
	    android:id="@+id/imageView1"
	    android:background="@null"
	    android:layout_width="200dp"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="14dp"
	    android:src="@drawable/comon" />

	<ImageButton
	    android:id="@+id/deelnemerButton"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/nieuwsButton"
	    android:layout_below="@+id/nieuwsButton"
	    android:layout_marginTop="18dp"
	    android:background="@null"
	    android:src="@drawable/deelnemers" />

	<ImageButton
	    android:id="@+id/opdrachtgeverButton"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignRight="@+id/infoButton"
	    android:layout_below="@+id/infoButton"
	    android:layout_marginTop="18dp"
	    android:background="@null"
	    android:src="@drawable/bedrijven" />

	<ImageButton
	    android:id="@+id/nieuwsButton"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/opdrachtgeverButton"
	    android:layout_alignLeft="@+id/kalenderButton"
	    android:background="@null"
	    android:src="@drawable/nieuws" />

	<ImageButton
	    android:id="@+id/kalenderButton"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/imageView1"
	    android:layout_marginLeft="19dp"
	    android:layout_marginTop="23dp"
	    android:layout_toRightOf="@+id/infoButton"
	    android:background="@null"
	    android:src="@drawable/kalender" />

	<ImageButton
	    android:id="@+id/infoButton"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignTop="@+id/kalenderButton"
	    android:layout_marginLeft="14dp"
	    android:background="@null"
	    android:src="@drawable/info" />

	<ImageButton
	    android:id="@+id/stemButton"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignRight="@+id/opdrachtgeverButton"
	    android:layout_alignTop="@+id/deelnemerButton"
	    android:background="@null"
	    android:src="@drawable/stemmen" />

</RelativeLayout>