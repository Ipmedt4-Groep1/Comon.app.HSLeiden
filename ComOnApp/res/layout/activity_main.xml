<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res/com.example.comonnavigation"
android:id="@+id/RelativeLayout1"
android:layout_width="wrap_content"
android:layout_height="match_parent" >


    <LinearLayout 
        
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:background="@null"
            android:src="@drawable/comon" />
  
           <android.support.v7.widget.GridLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_column="2"
               app:layout_row="3"
               android:stretchMode="columnWidth"
               
               android:paddingLeft="0dp" >
           
           <ImageButton
                android:id="@+id/nieuwsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                app:layout_column="2"
                app:layout_row="1" 
                android:layout_marginLeft="10dp"
                android:src="@drawable/nieuws" />

            <ImageButton
                android:id="@+id/opdrachtgeverButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
               app:layout_column="1"
                app:layout_row="2"
                android:layout_marginTop="10dp"
                android:src="@drawable/bedrijven" />

            <ImageButton
                android:id="@+id/deelnemerButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                app:layout_column="2"
                app:layout_row="2"
                android:layout_marginLeft="10dp"
                 android:layout_marginTop="10dp"
                android:src="@drawable/deelnemers" />

            <ImageButton
                android:id="@+id/kalenderButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
           		android:background="@null"
                app:layout_column="1"
                app:layout_row="3"
                android:layout_marginTop="10dp"
                android:src="@drawable/kalender" />

            <ImageButton
                android:id="@+id/stemButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_column="2"
                app:layout_row="3"   
                android:background="@null"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/stemmen" />

            <ImageButton
                android:id="@+id/infoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_column="1"
                app:layout_row="1"
                android:background="@null"
                android:paddingLeft="0dp"
                android:src="@drawable/info" />
 
        </android.support.v7.widget.GridLayout>

           <ImageView
               android:id="@+id/imageView2"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               
              android:src="@drawable/balk_afbeelding" />
           
         //Moet nog goed uitgelijnd worden aan bottem van pagina
    
</LinearLayout>
</RelativeLayout>
    